<%- include("partials/header") ;-%>

    <section class="text-gray-600 body-font overflow-hidden">
        <div class="container px-5 py-24 mx-auto">
            <div class="-my-8 divide-y-2 divide-gray-20 0">
                <% posts.forEach(function(post){ %>
                <div class="py-8 flex flex-wrap md:flex-nowrap">
                    <div class="md:w-64 md:mb-0 mb-6 flex-shrink-0 flex flex-col w-full">
                        <span class="font-semibold title-font text-gray-700">                    
                            <%=post.author%>
                        </span>
                        <span class="mt-1 text-gray-500 text-sm"><%=post.createdAt.toLocaleString()%></span>
                    </div>
                    <div class="md:flex-grow">
                        <h2 class="text-3xl font-medium text-gray-900 title-font mb-2">
                            <%=post.postTitle%>
                        </h2>
                        <p class="leading-relaxed">
                            <!-- <%=post.postBody.replace(/\n/g, "<br>")%> -->
                            <%=post.postBody.substring(0, 500) + " ..." %>
                        </p>
                        <a class="text-indigo-500 inline-flex items-center mt-4" href="/posts/<%=post.postTitle%>">Read More
                            <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"
                                fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M5 12h14"></path>
                                <path d="M12 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>
    <script>
        let like = document.getElementById("like");
        like.addEventListener("click",()=>{
            like.classList.remove("fa-regular");
            like.classList.add("fa-solid");
        })
    </script>
    <%- include("partials/footer") -%>